generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                     String    @id @default(cuid())
  email                  String    @unique
  passwordHash           String?   // null for Google users
  authProvider           String    // "google" or "email"
  language               String    @default("en") // "en" | "no"
  stripeCustomerId       String? 
  stripeSubscriptionId   String?
  isPremium              Boolean   @default(false)
  premiumTier            String?   // "monthly" | "yearly"
  trialEndsAt            DateTime?
  createdAt              DateTime  @default(now())
  updatedAt              DateTime  @updatedAt
  sleepLogs              SleepLog[]
  moduleProgresses       ModuleProgress[]
}

model SleepLog {
  id                  String   @id @default(cuid())
  user                User     @relation(fields: [userId], references: [id])
  userId              String
  date                DateTime
  bedtime             DateTime
  timeToFallAsleepMin Int?
  awakenings          Int?
  wakeAfterSleepMin   Int?
  wakeTime            DateTime?
  howRested           Int?     // 1-5
  totalTimeInBedMin   Int?
  totalSleepTimeMin   Int?
  sleepEfficiency     Float?
  createdAt           DateTime @default(now())
}

model ModuleProgress {
  id          String   @id @default(cuid())
  user        User     @relation(fields: [userId], references: [id])
  userId      String
  moduleKey   String
  completed   Boolean  @default(false)
  completedAt DateTime?
}

model Badge {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  key       String
  awardedAt DateTime @default(now())
}
